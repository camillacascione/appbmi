<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.app.bmi"
    versionCode = "10"
    version     = "1.0.0" >

<!-- versionCode is optional and Android only -->

  <name>App BMI</name>

  <description>
      App per il calcolo del BMI dati il peso in Kg, l'altezza in metri e il sesso.
  </description>

  <author email="cascione.camilla@canossamilano.org">
      Camilla Cascione
  </author>

<platform name="android" />
<icon src="bmi.png" platform="android" qualifier="ldpi" />
<icon src="bmi.png" platform="android" qualifier="mdpi" />
<icon src="bmi.png" platform="android" qualifier="hdpi" />
<acces origin="*" />
<plugin name="cordova-plugin-whitelist" source="npm" />
<!-- abilita links esterni -->
<allow-navigation href="*://*getskeleton.com/*" />
</widget>
